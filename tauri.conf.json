{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "t2t",
  "version": "0.1.0",
  "identifier": "com.t2t.desktop",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:5173",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "./build"
  },
  "app": {
    "withGlobalTauri": true,
    "security": {
      "csp": null
    },
    "windows": [
      {
        "label": "main",
        "title": "",
        "width": 80,
        "height": 80,
        "visible": true,
        "resizable": false,
        "decorations": false,
        "transparent": true,
        "skipTaskbar": true,
        "alwaysOnTop": true,
        "center": true
      }
    ],
    "macOSPrivateApi": true
  },
  "bundle": {
    "active": true,
    "icon": [],
    "macOS": {
      "entitlements": "./entitlements.plist",
      "infoPlist": "./macos-info.plist"
    }
  },
  "plugins": {}
}
