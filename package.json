{
  "name": "t2t",
  "version": "0.2.0",
  "description": "Fn push-to-talk dictation for macOS: local Whisper transcription + auto-paste into the focused app.",
  "keywords": [
    "tauri",
    "rust",
    "svelte",
    "sveltekit",
    "svelte5",
    "macos",
    "desktop-app",
    "speech-to-text",
    "dictation",
    "push-to-talk",
    "fn-key",
    "whisper",
    "whisper-rs",
    "offline",
    "local-first",
    "clipboard",
    "accessibility",
    "productivity"
  ],
  "private": true,
  "scripts": {
    "dev": "vite dev",
    "dev:worker": "cd worker && bun run dev",
    "dev:all": "bun run dev:worker & bun tauri dev",
    "build": "vite build",
    "preview": "vite preview",
    "tauri": "lsof -ti tcp:5173 | xargs kill -9 && tauri",
    "deploy:worker": "cd worker && bun run deploy",
    "macos:install": "bash ./scripts/macos-install.sh",
    "release": "npm version patch && git push && git push --tags",
    "release:minor": "npm version minor && git push && git push --tags",
    "release:major": "npm version major && git push && git push --tags"
  },
  "devDependencies": {
    "@sveltejs/adapter-static": "^3.0.0",
    "@sveltejs/kit": "^2.0.0",
    "@sveltejs/vite-plugin-svelte": "^4.0.0",
    "@tailwindcss/vite": "^4.1.18",
    "@tauri-apps/cli": "^2.0.0",
    "svelte": "^5.0.0",
    "tailwindcss": "^4.1.18",
    "typescript": "^5.0.0",
    "vite": "^5.0.0"
  },
  "dependencies": {
    "@tauri-apps/api": "^2.0.0",
    "@tauri-apps/plugin-clipboard-manager": "^2.0.0",
    "@tauri-apps/plugin-store": "^2.0.0",
    "effect": "^3.19.11"
  },
  "type": "module"
}
